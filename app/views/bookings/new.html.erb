<h1>Book Flight</h1>

<p>Flight ID: <%= @flight.id %></p>
<p>Departure Airport: <%= @flight.departure_airport.code %></p>
<p>Arrival Airport: <%= @flight.arrival_airport.code %></p>
<p>Flight Date: <%= @flight.start_datetime.strftime("%Y-%m-%d %H:%M") %></p>

<%= form_with model: @booking, local: true do |f| %>
  <%= f.hidden_field :flight_id, value: @flight.id %>

  <%= f.fields_for :passengers do |passenger_form| %>
    <div>
      <%= passenger_form.label :name %>
      <%= passenger_form.text_field :name %>
    </div>

    <div>
      <%= passenger_form.label :email %>
      <%= passenger_form.text_field :email %>
    </div>
  <% end %>

  <%= f.submit "Complete Booking" %>
<% end %>
